<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF113E35">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFC7D2D2" CornerRadius="20" Padding="20" Width="236" Height="327">
            <StackPanel>
                <Label Content="Login" HorizontalAlignment="Center" FontWeight="Bold" FontSize="22" FontFamily="Arial Black" Foreground="#FFAF6C0A"/>
                
                <TextBlock Text= "Email :" Margin="10,20,10,2" Foreground="#FF113E35"/>
                <TextBox x:Name="txtEmail" Margin="10,6,10,10" Background="#FFC7D2D2" BorderThickness="1" BorderBrush="#FF113E35"/>

                <TextBlock Text= "Password :" Margin="10,20,10,2" Foreground="#FF113E35"/>
                <PasswordBox x:Name="txtPass" Margin="10,6,10,30" Background="#FFC7D2D2" BorderThickness="1" BorderBrush="#FF113E35"/>

                <Button IsDefault="True" Content="Submit" Margin="10,6,10,20" Background="#FFAF6C0A" Foreground="#FFC7D2D2" Height="28" Click="Button_Click" />

                <Label x:Name="Error_mas" Foreground="#FF940000" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

<Window x:Class="WpfApp1.TeacherPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="TeacherPage" Height="450" Width="800">
    <Grid Background="#FF113E35">
        <Grid.RowDefinitions>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="369*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <ComboBox x:Name="Course_DropDown" 
                      Grid.Row="0" 
                      Margin="200,18,200,18"
                      DisplayMemberPath="CourseName"
                      SelectionChanged="Course_DropDown_SelectionChanged"/>
        </StackPanel>


        <StackPanel Grid.Row="1">
            <Grid Height="371">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <StackPanel Grid.Column="0" Margin="0,0,0,217">
                    <DataGrid x:Name="StudentsCourssDataGrid" Grid.Row="1" Margin="10,0,10,20" Height="148" Width="350" SelectionChanged="StudentsCourssDataGrid_SelectionChanged">
                    </DataGrid>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,0,210">
                    <DataGrid x:Name="StudentsassignmentsDataGrid" Grid.Row="1" Margin="10,0,10,20" Height="148" Width="350" SelectionChanged="StudentsassignmentsDataGrid_SelectionChanged">
                    </DataGrid>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Height="52" Margin="12,272,3,47">
                    <TextBlock VerticalAlignment="Center" Text="student ID :" Foreground="#FFDEDEDE" Height="14" Width="37" FontSize="8"/>
                    <TextBox x:Name="txtStudentID" IsReadOnly="True" Width="30" 
                             Margin="6,6,20,6" Background="#FF255D52" 
                             BorderBrush="#FF255D52" Foreground="#FFF0F0F0" 
                             FontWeight="Bold" Height="26"/>

                    <TextBlock VerticalAlignment="Center" Text="student Name :" Foreground="#FFDEDEDE" Height="14" Width="55" FontSize="8"/>
                    <TextBox x:Name="txtStudentName" Width="88" IsReadOnly="True" Margin="6,6,20,6" Background="#FF255D52" BorderBrush="#FF255D52" Foreground="#FFF0F0F0" FontWeight="Bold" Height="27"/>

                    <TextBlock VerticalAlignment="Center" Text="student avreg score: :" Foreground="#FFDEDEDE" Height="14" Width="71" FontSize="8"/>
                    <TextBox x:Name="txtStudentAvgScour" Width="31" IsReadOnly="True" 
                             Margin="6,6,20,6" Background="#FF255D52" 
                             BorderBrush="#FF255D52" Foreground="#FFF0F0F0" FontWeight="Bold" Height="27" FontSize="9"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="52" Width="183">
                    <Button x:Name="viwe" Content="viwe sudent assignments"  FontWeight="Bold" Foreground="#FF255D52" Width="170" Margin="6,6,6,6" Height="36" Click="viwe_Click"/>
                </StackPanel>


                <StackPanel Grid.Column="1"  Orientation="Horizontal" HorizontalAlignment="Center" Height="52" Width="326" Margin="0,272,0,47">
                    <Button x:Name="AddassBTN" Content="Add assignment" FontWeight="Bold" Foreground="#FF255D52" Width="96" Margin="6,6,6,6" Height="35" Click="AddassBTN_Click"/>
                    <Button x:Name="UpdatassBTN" Content="Update" FontWeight="Bold" Foreground="#FF255D52" Width="96" Margin="6,6,6,6" Height="35" Click="UpdatassBTN_Click"/>
                    <Button x:Name="deleteassBTN" Content="delete" FontWeight="Bold" Foreground="#FF255D52" Width="101" Margin="6,6,6,6" Height="35" Click="deleteassBTN_Click"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" Grid.Column="1" Orientation="Horizontal" Margin="8,166,7,166">
                    <TextBlock VerticalAlignment="Center" Text="assignments ID :" Foreground="#FFDEDEDE" Height="14" Width="59" FontSize="8"/>
                    <TextBox x:Name="txtassignmentID" IsReadOnly="True" Width="30" Margin="6,6,15,6" Background="#FF255D52" BorderBrush="#FF255D52" Foreground="#FFF0F0F0" FontWeight="Bold" Height="26" FontSize="10"/>

                    <TextBlock VerticalAlignment="Center" Text="assignment Name :" Foreground="#FFDEDEDE" Height="14" Width="64" FontSize="8"/>
                    <TextBox x:Name="txtAssignmentName" Width="88" Margin="6,6,15,6" Background="#FFF0F0F0" BorderBrush="#FF255D52" Foreground="#FF113E35" FontWeight="Bold" Height="25" FontSize="10"/>

                    <TextBlock VerticalAlignment="Center" Text="student score: :" Foreground="#FFDEDEDE" Height="14" Width="56" FontSize="8"/>
                    <TextBox x:Name="txtstudentScour" Width="31" Margin="6,6,20,6" Background="#FFF0F0F0" BorderBrush="#FF255D52" Foreground="#FF113E35" FontWeight="Bold" Height="27" FontSize="10"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>